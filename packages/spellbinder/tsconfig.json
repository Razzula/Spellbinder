{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "dist",
        "emitDeclarationOnly": false,
        "noEmit": false,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "lib": [
            "ES2020",
            "ES2015.Iterable",
            "DOM"
        ],
        "resolveJsonModule": true,
        "allowImportingTsExtensions": false,
        "strict": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "src"
    ]
}
